---
const data = await fetch("https://mblcdev.com/api/book");
const response = await data.json();
const sortedResponse = response.sort(
  (a: Book, b: Book) =>
    new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
interface Book {
  data: {
    title: string;
    pubDate: string;
  };
  slug: string;
}
